<% tours.forEach(tour => { %>
    <article class="toursDetail">
        <a href="/tours/detail/<%= tour.id %> " class="ref">
            <img src="<%= tour.imagen1 %> ">
            <div class="detalleT">
            <h4 class="nombreT"><%= tour.nombre %> </h4>
            <p class="precioT"> Precio por grupo de máximo 8 personas <%= tour.precio %> </p>
            <p class="descripcionT"><%= tour.descripcionDetallada %> </p>
            <p class="duracionT">Duración aproximada del tour: <%= tour.duracion %> </p>
            </div>
        </a>
    </article>
<% }) %>


