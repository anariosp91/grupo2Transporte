<!DOCTYPE html>
<html class="htmlDetail" lang="en">
  
<%- include("partials/head") %>

<body>
    <header class="banner">
      <%- include("partials/header") %>
    </header>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active itemCarousel" data-bs-interval="200000">
          <img src="/img/products/<%= tour.image1 %> " class="imgCarousel" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5><%= tour.title %> </h5>
          </div>
        </div>
        <div class="carousel-item itemCarousel">
          <img src="/img/products/<%= tour.image2 %> " class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5><%= tour.title %> </h5>
          </div>
        </div>
        <div class="carousel-item itemCarousel">
          <img src="/img/products/<%= tour.image3 %> " class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5><%= tour.title %> </h5>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    </section>
          <div class="maincontainer">
            <section class="contenedor1">
              <div class="tituloTour"> 
                <h2><%= tour.title %> </h2>
                <% if (locals.isLogged && locals.userLogged.admin) { %>
                <a href="/tours/edit/<%= tour.id %> "><i class="fa-solid fa-pen-to-square"></i></a>
                <% } %>
              </div>
              <h5> Precio para 4 personas: $<%= tour.price %>  </h5>
              <div> Fecha: <input type="date"> </div>
              <div> Personas: <input type="number" min="1" max="9" step="1" value="1" class="quantity">
              </div>
              <% let resultado = encodeURIComponent('Hola!! Necesito información a cerca de los tours que vi en la pagina web') %>
              <div> <a target="_blank" href="https://api.whatsapp.com/send?phone=573147252991&text=<%= resultado %> " class="myButton">Reservar</a> </div>
              <div class="botonEliminar"> 
                <!-- <a href="#" class="myButton Color2">Agregar al carrito</a>  -->
                <% if (locals.isLogged && locals.userLogged.admin) { %>
                <form action="/tours/delete/<%= tour.id %>?_method=DELETE" method="POST">
                  <button type="submit"> <i class="fa-solid fa-trash-can"></i> </button>
                </form>
                <% } %>
              </div>
            </section>
            <section class="contenedor2">
              <div class="horario">
                <i class="fa-solid fa-clock-rotate-left reloj"> </i>
                <p class="margen">Duración del tour, <%= tour.duration %>  aproximadamente</p>
              </div>
              <div><%= tour.long_description %> </div>
            </section>
          </div>
          <%- include("partials/wpp-button") %> 
        </main>
        <div class="footer"><%- include("partials/footer") %> </div>
        
</body>

</html>